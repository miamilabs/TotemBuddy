<Bindings>
    <!-- Cast Element Totems -->
    <Binding name="TOTEMBUDDY_CAST_FIRE">
        TotemBuddy_CastElement(1)
    </Binding>
    <Binding name="TOTEMBUDDY_CAST_EARTH">
        TotemBuddy_CastElement(2)
    </Binding>
    <Binding name="TOTEMBUDDY_CAST_WATER">
        TotemBuddy_CastElement(3)
    </Binding>
    <Binding name="TOTEMBUDDY_CAST_AIR">
        TotemBuddy_CastElement(4)
    </Binding>

    <!-- Open Selector for Element -->
    <Binding name="TOTEMBUDDY_SELECT_FIRE">
        TotemBuddy_SelectElement(1)
    </Binding>
    <Binding name="TOTEMBUDDY_SELECT_EARTH">
        TotemBuddy_SelectElement(2)
    </Binding>
    <Binding name="TOTEMBUDDY_SELECT_WATER">
        TotemBuddy_SelectElement(3)
    </Binding>
    <Binding name="TOTEMBUDDY_SELECT_AIR">
        TotemBuddy_SelectElement(4)
    </Binding>

    <!-- Cycle Sets -->
    <Binding name="TOTEMBUDDY_NEXT_SET">
        TotemBuddy_CycleSet(1)
    </Binding>
    <Binding name="TOTEMBUDDY_PREV_SET">
        TotemBuddy_CycleSet(-1)
    </Binding>

    <!-- Direct Set Access (Set 1-5) -->
    <Binding name="TOTEMBUDDY_SET_1">
        TotemBuddy_ActivateSet(1)
    </Binding>
    <Binding name="TOTEMBUDDY_SET_2">
        TotemBuddy_ActivateSet(2)
    </Binding>
    <Binding name="TOTEMBUDDY_SET_3">
        TotemBuddy_ActivateSet(3)
    </Binding>
    <Binding name="TOTEMBUDDY_SET_4">
        TotemBuddy_ActivateSet(4)
    </Binding>
    <Binding name="TOTEMBUDDY_SET_5">
        TotemBuddy_ActivateSet(5)
    </Binding>
</Bindings>
